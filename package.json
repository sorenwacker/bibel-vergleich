{
  "name": "bibel-vergleich",
  "version": "1.0.0",
  "description": "Desktop-App zum Vergleichen deutscher Bibelübersetzungen",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder -mwl"
  },
  "keywords": [
    "bible",
    "german",
    "comparison",
    "electron"
  ],
  "author": "Sören Wacker",
  "license": "MIT",
  "devDependencies": {
    "electron": "^38.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.bibelvergleich.app",
    "productName": "Bibel Vergleich",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.html",
      "app.js",
      "styles.css",
      "sw.js",
      "electron-main.js",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.reference",
      "icon": "assets/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  }
}
